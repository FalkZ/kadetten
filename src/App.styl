.arrow
 position fixed !important
 right 0 !important
 bottom 0
 left 0 !important
 z-index 3
 display table !important
 margin 0 auto !important
 width auto !important
 width 48px !important
 zoom 1.3

 .material-icons
  padding-top 9px
  padding-bottom 5px
  border-radius 20px
  background-color #475fdd !important
  box-shadow rgba(0, 0, 0, .12) 0 1px 6px, rgba(0, 0, 0, .12) 0 1px 4px
  color white !important
  line-height 10px
  -webkit-animation arrow 1s infinite alternate

@keyframes arrow
 0%
  padding-top 12px
  padding-bottom 2px

 50%
  padding-top 9px
  padding-bottom 5px

// width 48px !important
.AppBar
 position fixed !important
 top 0
 right 0
 left 0

 .logo
  *
   color white

  &>*
   margin-top -3px !important
   margin-left -20px !important

.Section, .Title
 margin 20px

.Menu
 display none
 overflow-y scroll !important
 max-height 80vh !important
 width 250px

 .current
  color #475fdd

 &>div>div
  margin-top 5px !important
  margin-bottom 5px !important

 .item>div>div>div
  margin-left -20px !important

 .subitem
  padding-left 18px !important

@media screen and (max-width: 700px)
 .close
  .Menu
   position fixed
   top 64px
   right 0
   left 0
   z-index 2
   display block
   margin 20px
   width auto

@media screen and (min-width: 700px)
 .close
  .Menu
   position fixed
   top 64px + 20px
   left 20px
   z-index 2
   display block

  .Section, .Title
   margin-left 290px

.Title
 position fixed
 top 64px
 background-color #475fdd !important
 line-height 64px

 h1
  margin 0 20px
  width 100%
  color white
  font-weight normal
  font-size 24px

.Section
 padding-top 84px !important
 min-height 100vh

 &:first-child
  padding-top 84px + 64px !important

.Markdown
 padding 20px

 h2
  margin-top 5px
  padding-bottom 15px
  border-bottom 2px solid rgb(71, 95, 221)
  color rgb(71, 95, 221)
  font-weight normal
  font-size 24px

 p
  font-size 18px
  line-height 1.5em

strong
 font-weight 500
